<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <%=err.message%>_________________
                </h4>
                <% if(process.env.NODE_ENV !=="production" ){ %>
                    <!-- this means don't display the error detail info to the users -->
                    <p>
                        <%=err.stack%>>
                    </p>
                    <hr>
                    <p class="mb-0">
                        <%=err.statusCode%>
                    </p>

                    <% } %>
            </div>
        </div>
    </div>