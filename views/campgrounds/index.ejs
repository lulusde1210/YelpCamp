<% layout('layouts/boilerplate') %>


    <div id="cluster-map" class="mb-3"></div>

    <%for (let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length){ %>
                        <img src="<%=campground.images[0].url%>" class="img-fluid" alt="<%=campground.title%>">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/dewkyhwvl/image/upload/v1677707349/YelpCamp/hwghdnf4lxuzdpxwpxef.jpg"
                                class="img-fluid" alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=campground.title%>
                        </h5>
                        <p class="card-text">
                            <%=campground.description%>
                        </p>
                        <p class="card-text text-muted">
                            <%=campground.location%>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-secondary">View
                            <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <%}%>

            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';// this sign means to include other codes
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>